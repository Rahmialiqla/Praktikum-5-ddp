
pilihan  = (input("""Silahkan pilih nomor dibawah ini
untuk menggunakan tools dibawah
1. Persegi
2. Lingkaran
3. Segitiga
Pilihan mu? """))
match pilihan:
  case"1":
    s=int(input("masukkan sisi:"))
    persegi=s*s
    print('luaspersegi',persegi)
  case"2":
    phi=3.14
    r=int(input("masukkan jari:"))
    lingkaran=phi*r*r
    print('luas lingkaran',lingkaran)
  case"3":
   l=1/2
   a=int(input("masukkan alas:"))
   t=int(input("masukkan tinggi:"))
   segitiga=l*a*t
   print('luas segitiga',segitiga)
